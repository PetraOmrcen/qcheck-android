<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NotLoggedInView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A448B2"
    android:backgroundTint="#FBFBFD"
    tools:context=".ui.auth.NotLoggedInFragment">


    <Button
        android:id="@+id/register_button"
        android:layout_width="309dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/green_medium"
        android:text="Register"
        android:textColor="@color/colorTextWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="295dp"
        android:layout_height="35dp"
        android:layout_marginTop="264dp"
        android:fontFamily="sans-serif"
        android:text="You don't have an account?"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/green_blue"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="303dp"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif"
        android:text="You already have an account?"
        android:textAlignment="viewStart"
        android:textColor="@color/green_blue"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_button"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="309dp"
        android:layout_height="47dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/green_medium"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewSignInWithGoogle"
        android:layout_width="303dp"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif"
        android:text="Sign in with Google."
        android:textAlignment="center"
        android:textColor="@color/green_blue"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignInWithGoogle" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/green_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="228dp"
        android:layout_height="126dp"
        android:layout_marginTop="40dp"
        android:background="#00FAF6F6"
        android:fontFamily="sans-serif-smallcaps"
        android:text="You are not logged in."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorTextWhite"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/wave_blue2"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />


</androidx.constraintlayout.widget.ConstraintLayout>